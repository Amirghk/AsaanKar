@model IEnumerable<CategoryViewModel>


<div class="container">
    @foreach (var category in Model)
    {

        <h1>@category.Name</h1>
        <ul class="list-group list-group-horizontal">
            @if (category.Services is not null)
            {
                @foreach (var service in category.Services)
                {
                    <li class="list-group-item glass">
                        <div class="card bg-transparent" style="width: 18rem;">
                            <div class="card-body bg-transparent">
                                <h5 class="card-title">@service.Description</h5>
                                <p class="card-text">@service.Description</p>
                                <a asp-controller="Order" asp-action="Create" asp-route-id=@service.Id class="btn btn-primary">درخواست سرویس</a>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    }
</div>
