@page
@using FinalProject.Application.Common.Extensions
@using FinalProject.Domain.Enums
@using FinalProject.Endpoint.Areas.Identity.Models
@model FinalProject.Endpoint.Areas.Administration.Pages.Uploads.IndexModel
@{
}
<h1>فایل های آپلود شده</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameForInnerType((UploadViewModel c) => c.Id)</th>
            <th scope="col">@Html.DisplayNameForInnerType((UploadViewModel c) => c.FileName)</th>
            <th scope="col">@Html.DisplayNameForInnerType((UploadViewModel c) => c.FileSize)</th>
            <th scope="col">@Html.DisplayNameForInnerType((UploadViewModel c) => c.FileCategory)</th>

            <th scope="col">ویرایش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var upload in Model.UploadViewModels)
        {
            <tr>
                <th scope="row">@upload.Id</th>
                <td>@upload.FileName</td>
                <td>@upload.FileSize</td>
                <td>@upload.FileCategory.GetDisplayName()</td>
                <td>
                    <form asp-page-handler="delete" asp-route-id=@upload.Id method="post">

                        <button type="submit" asp-page-handler="delete" asp-route-id=@upload.Id>حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>