@model FinalProject.Endpoint.Areas.Administration.Pages.Users.IndexModel


<h1>مشتریان</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameForInnerType((CustomerListVM c) => c.Id)</th>
            <th scope="col">@Html.DisplayNameForInnerType((CustomerListVM c) => c.FirstName )</th>
            <th scope="col">@Html.DisplayNameForInnerType((CustomerListVM c) => c.LastName)</th>
            <th scope="col">@Html.DisplayNameForInnerType((CustomerListVM c) => c.PhoneNumber)</th>
            <th scope="col">@Html.DisplayNameForInnerType((CustomerListVM c) => c.BirthDate)</th>
            <th scope="col">ویرایش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <th scope="row">@customer.Id</th>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.BirthDate</td>
                <td>
                    <form asp-area="Identity" asp-page="/Account/Manage/AdminIndex" method="get">
                        <button class="btn btn-default">ویرایش</button>
                        <input type="hidden" name="userId" value=@customer.Id />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
