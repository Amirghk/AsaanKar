@using FinalProject.Domain.Enums
@using FinalProject.Endpoint.Areas.Administration.Models
@model OrderEditViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-area="Administration" asp-controller="Order" asp-action="Edit" method="post" class="col-8">
  <div class="form-group my-2">
    <label asp-for=DateCompleted></label>
    <input asp-for=DateCompleted type="date" class="form-control">
    <span asp-validation-for="DateCompleted" class="text-danger"></span>
  </div>
  <div class="form-group my-4">
    <label asp-for=State></label>
    <select asp-for=State asp-items=@(Html.GetEnumSelectList<OrderState>())>
    </select>
    <span asp-validation-for="State" class="text-danger"></span>
  </div>
  
  <button type="submit" class="btn btn-primary my-2">ذخیره تغییرات</button>
</form>


@section Scripts{
        <partial name="_ValidationScriptsPartial" /> 
}