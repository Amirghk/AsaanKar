@model BidViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-area="Administration" asp-controller="Order" asp-action="EditBid" method="post" class="col-8">
  <div class="form-group my-2">
    <label asp-for=Price></label>
    <input asp-for=Price class="form-control">
    <span asp-validation-for="Price" class="text-danger"></span>
  </div>
  <div class="form-group my-2">
    <label asp-for=Notes></label>
    <input asp-for=Notes class="form-control">
    <span asp-validation-for="Notes" class="text-danger"></span>
  </div>
  <input type="hidden" asp-for=ExpertId value=@Model.ExpertId />
  <input type="hidden" asp-for=OrderId value=@Model.OrderId />
  <button type="submit" class="btn btn-primary my-2">ذخیره تغییرات</button>
</form>


@section Scripts{
        <partial name="_ValidationScriptsPartial" /> 
}