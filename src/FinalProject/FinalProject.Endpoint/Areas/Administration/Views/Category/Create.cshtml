@model CategorySaveViewModel



<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for=Name></label>
                <input type="text" class="form-control" asp-for=Name>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Description></label>
                <input class="form-control" asp-for=Description>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=ParentCategoryId></label>
                <select class="form-control" asp-for=ParentCategoryId asp-items=@ViewBag.Categories>
                    <option selected disabled>انتخاب کنید</option>
                </select>
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-info my-2" onclick="document.getElementById('getFile').click()">انتخاب عکس</button>
                <input class="form-control" id="getFile" style="display: none;" asp-for=Picture>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">ایجاد</button>
        </form>
    </div>
</div>


@section Scripts{
        <partial name="_ValidationScriptsPartial" /> 
}