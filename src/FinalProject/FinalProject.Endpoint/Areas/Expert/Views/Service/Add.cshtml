@model List<int>
@{
    Layout = "/Areas/Expert/Views/Shared/_ExpertLayout.cshtml";
}

<form class="col-6" asp-controller="Service" asp-action="Add" method="post">

    <div class="form-group row py-3">
        <div>
            <select name="services" id="services" class="select-chosen form-select" asp-items="@ViewBag.Services" multiple data-placeholder="مهارت های خود را انتخاب کنید">
            </select>
        </div>
    </div>
    <button class="btn btn-success" type="submit">افزودن مهارت ها</button>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
<script>

            $(function() {
        $(".select-chosen").chosen({rtl: true});
    });
</script>
}
