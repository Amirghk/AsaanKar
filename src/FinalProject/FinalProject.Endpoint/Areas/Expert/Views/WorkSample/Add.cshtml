@model ExpertWorkSampleViewModel

@{
    ViewData["Title"] = "افزودن نمونه کار";
    Layout = Layout = "/Areas/Expert/Views/Shared/_ExpertLayout.cshtml";
}


<div class="my-4">
    <form id="profile-form" asp-controller="WorkSample" asp-action="Add" method="post" enctype="multipart/form-data">

        <div class="form-floating my-3">
            <input asp-for="WorkSample" style="display: none;" id="work-sample" class="form-control" />
            <button type="button" class="btn btn-info my-2" onclick="document.getElementById('work-sample').click()">@Html.DisplayNameFor(x=> x.WorkSample)</button>
            <span asp-validation-for="WorkSample" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">افزودن</button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}